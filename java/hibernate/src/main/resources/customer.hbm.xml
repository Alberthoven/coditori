<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class entity-name="Customer">

        <id name="id"
            type="long"
            column="ID">
            <generator class="identity"/>
        </id>

        <property name="name"
                  column="NAME"
                  type="string"/>

        <property name="address"
                  column="ADDRESS"
                  type="string"/>

    </class>

</hibernate-mapping>